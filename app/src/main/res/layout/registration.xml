<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/red"
            android:weightSum="2"
            android:padding="@dimen/_15sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:includeFontPadding="false"
                android:text="@string/weather_guide"
                android:fontFamily="@font/bold_letters"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp" />

            <ProgressBar
                android:id="@+id/progress_circular"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:indeterminateTint="@color/teal_200"
                android:layout_weight="1"
                android:visibility="invisible"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Activities.Registration"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="ScrollViewSize">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/fields_compulsory"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_14sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/mobile_number"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_14sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/round_style"
                    android:backgroundTint="@color/gray"
                    android:padding="@dimen/_13sdp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_21sdp"
                        android:layout_weight="0.2"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:src="@drawable/phone"
                        android:contentDescription="@string/todo" />

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:background="@null"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/enter_your_details"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_14sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/round_style"
                    android:backgroundTint="@color/gray"
                    android:padding="@dimen/_13sdp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_21sdp"
                        android:layout_weight="0.2"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:src="@drawable/user_filled"
                        android:contentDescription="@string/todo"
                        app:tint="@color/yellow" />

                    <EditText
                        android:id="@+id/fullName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:background="@null"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:hint="@string/full_name"
                        android:inputType="textPersonName"
                        android:textColorHint="@color/hint"
                        android:textSize="@dimen/_15ssp"
                        android:autofillHints="" />

                    <ImageView
                        android:id="@+id/infoName"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_weight="0.2"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:src="@drawable/info"
                        app:tint="@color/red"
                        android:contentDescription="@string/todo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/round_style"
                    android:backgroundTint="@color/gray"
                    android:padding="@dimen/_13sdp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_21sdp"
                        android:layout_weight="0.2"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:src="@drawable/gender"
                        android:contentDescription="@string/todo" />

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:background="@null"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:hint="@string/gender"
                        android:textColorHint="@color/hint"
                        android:textSize="@dimen/_15ssp"/>

                    <ImageView
                        android:id="@+id/genderCategory"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_21sdp"
                        android:layout_weight="0.2"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:src="@drawable/add"
                        android:contentDescription="@string/todo"
                        app:tint="@color/red" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/round_style"
                    android:backgroundTint="@color/gray"
                    android:padding="@dimen/_13sdp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_21sdp"
                        android:layout_weight="0.2"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:src="@drawable/dob"
                        android:contentDescription="@string/todo" />

                    <TextView
                        android:id="@+id/dob"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:background="@null"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:hint="@string/date_of_birth"
                        android:textColorHint="@color/hint"
                        android:textSize="@dimen/_15ssp" />

                    <ImageView
                        android:id="@+id/calendar"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_weight="0.2"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:src="@drawable/calendar"
                        app:tint="@color/red"
                        android:contentDescription="@string/todo" />
                </LinearLayout>

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/age"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_14sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/round_style"
                    android:backgroundTint="@color/gray"
                    android:padding="@dimen/_13sdp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_21sdp"
                        android:layout_weight="0.2"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:src="@drawable/location"
                        android:contentDescription="@string/todo"
                        app:tint="@color/dark_blue"/>

                    <EditText
                        android:id="@+id/address1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:background="@null"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:hint="@string/address_line_1"
                        android:inputType="textPersonName"
                        android:textColorHint="@color/hint"
                        android:textSize="@dimen/_15ssp"
                        android:autofillHints="" />
                    <ImageView
                        android:id="@+id/infoAddress1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_weight="0.2"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:src="@drawable/info"
                        app:tint="@color/red"
                        android:contentDescription="@string/todo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/round_style"
                    android:backgroundTint="@color/gray"
                    android:padding="@dimen/_13sdp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_21sdp"
                        android:layout_weight="0.2"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:src="@drawable/location"
                        android:contentDescription="@string/todo"
                        app:tint="@color/dark_blue" />

                    <EditText
                        android:id="@+id/address2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:background="@null"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:hint="@string/address_line_2"
                        android:inputType="textPersonName"
                        android:textColorHint="@color/hint"
                        android:textSize="@dimen/_15ssp"
                        android:autofillHints="" />

                    <ImageView
                        android:id="@+id/infoAddress2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_weight="0.2"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:src="@drawable/info"
                        app:tint="@color/red"
                        android:contentDescription="@string/todo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/round_style"
                    android:backgroundTint="@color/gray"
                    android:padding="@dimen/_13sdp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_21sdp"
                        android:layout_weight="0.2"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:src="@drawable/pincode"
                        android:contentDescription="@string/todo"
                        app:tint="@color/dark_blue"/>

                    <EditText
                        android:id="@+id/pinCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:background="@null"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:hint="@string/pincode"
                        android:inputType="phone"
                        android:textColorHint="@color/hint"
                        android:textSize="@dimen/_15ssp"
                        android:autofillHints="" />

                    <Button
                        android:id="@+id/check"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_style"
                        android:backgroundTint="@color/hint"
                        android:padding="@dimen/_2sdp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/bold_letters"
                        android:text="@string/check"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:enabled="false"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:hint="@string/district"
                    android:textColor="@color/red"
                    android:textColorHint="@color/red"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_14sdp" />


                <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:hint="@string/state"
                    android:textColorHint="@color/red"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_14sdp" />

                <Button
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_style"
                    android:backgroundTint="@color/green"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:fontFamily="@font/bold_letters"
                    android:text="@string/save_details"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>



</layout>